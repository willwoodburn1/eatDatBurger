<h1>Eat Da Burger!</h1>

<div id="notEaten">
  <h2>Burgers that have not been devoured!</h2>

  <ul id="notEatenItems">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<img src="/assets/burgerImage.jpg" alt="burger image">

<div id="eaten">
  <h2>Burgers that have been devoured!</h2>

  <ul id="eatenItems">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<div id="searchBar">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bur">Burger Name:</label>
      <input type="text" id="bur" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Yes<br>
      <input type="radio" name="devoured" value="0"> No
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>























